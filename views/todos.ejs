<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <h1>Todos APP</h1>

    <section class="week">
		<div class="container">
			<section class="day">
				<!-- NOTE: incomplete -->
				<!-- TODO:  -->
				<% if(left){ %>
					<h2>Todo:</h2>
					<ul>
						<% todos.forEach( el => {  ;%>
							<% if(el.completed !== true){ %>
									<li class='todoItem' data-id='<%=el._id%>'>
									<span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
									<span class='del'> Delete </span>
								</li>
							<% } %>
						<% }) %>  
					</ul>
				<% } %>

				<% if(left && left < todos.length) { %>
					<hr/>
					<% } %>
				<!-- NOTE: complete - renders completed todos only-->
				<% if(left < todos.length){ %>
					
					<h2>Completed:</h2>
					<ul>
						<% todos.forEach( el => { %>
							<% if(el.completed === true){ %>
								<li class='todoItem' data-id='<%=el._id%>'>
                <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %> - <%= el.day %></span>
									<span class='del'> Delete </span>
								</li>
							<% } %>
						<% }) %>  
					</ul>
				<% } %>
			</section>
		</div>
	</section>

    <h3><%= user.userName %> has <%= left %> things left to do.</h3>

    <!-- Added the the <select> block for the days of the week -->
    <form action="/todos/createTodo" method='POST'>
        <select name='day'>
            <option value="Monday">Monday</option>
            <option value="Tuesday">Tuesday</option>
            <option value="Wednesday">Wednesday</option>
            <option value="Thursday">Thursday</option>
            <option value="Friday">Friday</option>
            <option value="Saturday">Saturday</option>
            <option value="Sunday">Sunday</option>
          </select>
        <input type="text" placeholder="Enter Todo Item" name='todoItem'>
        <input type="submit">
    </form>

    <a href="/logout">Logout</a>

    <script src="js/main.js">
    </script>
  </body>
</html>
